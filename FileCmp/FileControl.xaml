<UserControl x:Class="FileCmp.FileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100"
             d:DesignWidth="320"
             MouseUp="FileControl_MouseUp"
             MouseEnter="FileControl_MouseEnter"
             MouseLeave="FileControl_MouseLeave">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="85" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="15" />
        </Grid.RowDefinitions>
        <Image Name="ImgFileIcon" Height="70" Width="70" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" />
        <Label Name="LblFileName" Content="MyFile.doc" Grid.Column="2" Grid.Row="1" />
        <Label Name="LblHash" Content="n/a" Grid.Column="2" Grid.Row="2" />
    </Grid>
</UserControl>
